{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            {% if program.poster %}
                <img class="card-img-top" src="{{ vich_uploader_asset(program, 'posterFile') }}" alt="{{ program.title }}">
            {% endif %}
            <div class="card-body">
                <h1 class="card-title">{{ program.title }}</h1>
                <p class="card-text">{{ program.synopsis }}</p>
            </div>
            <div>
                <h3>Durée totale de la série : {{ duration }}</h3>
            </div>
            <div class="card-footer">
                <h2>Saisons</h2>
                {% if program.seasons|length > 0 %}
                    <ul class="list-group list-group-flush">
                        {% for season in program.seasons %}
                            <li class="list-group-item">
                                <a href="{{ path('program_season_show', {slug : program.slug, 'season': season.id}) }}">
                                    Saison {{ season.number }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p>Aucune saison disponible pour cette série.</p>
                {% endif %}
            </div>
        </div>
        <strong>Acteurs :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('app_actor_show', {'id': actor.id}) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>

        <a href="{{ path('program_index') }}" class="btn btn-secondary mt-3">Retour à la liste des programmes</a>
    </div>
{% endblock %}
