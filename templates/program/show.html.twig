{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="{{ program.poster }}" alt="{{ program.title }} poster">
            </div>
            <div class="col-md-8">
                <h1>{{ program.title }}</h1>
                <p>{{ program.synopsis }}</p>
                <p><strong>Catégorie :</strong> {{ program.category.name }}</p>
            </div>
        </div>

        <h2 class="mt-4">Saisons</h2>
        {% if program.seasons|length > 0 %}
            <ul class="list-group">
                {% for season in program.seasons %}
                    <li class="list-group-item">
                        <a href="{{ path('program_season_show', {'program': program.id, 'season': season.id}) }}">
                            Saison {{ season.number }} ({{ season.year }})
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucune saison disponible pour cette série.</p>
        {% endif %}

        <a href="{{ path('program_index') }}" class="btn btn-primary mt-3">Retour à la liste des programmes</a>
    </div>
{% endblock %}
