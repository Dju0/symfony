{% extends 'base.html.twig' %}

{% block title %}Saison {{ season.number }} de {{ program.title }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="display-4">{{ program.title }} - Saison {{ season.number }} ({{ season.year }})</h1>
        <p>{{ season.description }}</p>

        <h2 class="mt-4">Épisodes</h2>
        {% if season.episodes|length > 0 %}
            <ul class="list-group">
                {% for episode in season.episodes %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>Épisode {{ episode.number }}: {{ episode.title }}</h5>
                            <p>{{ episode.synopsis }}</p>
                        </div>
                        <a class="btn btn-primary" href="{{ path('program_episode_show', {'program': program.id, 'season': season.id, 'episode': episode.id}) }}">
                            Voir l'épisode
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-muted">Aucun épisode pour cette saison.</p>
        {% endif %}

        <a class="btn btn-secondary mt-3" href="{{ path('program_show', {'id': program.id}) }}">Retour au programme</a>
    </div>
{% endblock %}
