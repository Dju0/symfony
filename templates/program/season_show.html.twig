{% extends 'base.html.twig' %}

{% block title %}Saison {{ season.number }} de {{ program.title }}{% endblock %}

{% block body %}
    <h1>{{ program.title }} - Saison {{ season.number }} ({{ season.year }})</h1>
    <p>{{ season.description }}</p>

    <h2>Épisodes</h2>
    {% if season.episodes|length > 0 %}
        <ul>
            {% for episode in season.episodes %}
                <li>
                    Épisode {{ episode.number }}: {{ episode.title }}
                    <p>{{ episode.synopsis }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun épisode pour cette saison.</p>
    {% endif %}

    <a href="{{ path('program_show', {'id': program.id}) }}">Retour au programme</a>
{% endblock %}
