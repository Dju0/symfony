{% extends 'base.html.twig' %}

{% block title %}Episode{% endblock %}

{% block body %}
    <h1 class="mb-4">Episode</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_episode_index') }}" class="btn btn-primary mt-3">Revenir à la liste des épisodes</a>
    <p><a href="{{ path('app_episode_edit', {slug : episode.slug}) }}" class="btn btn-primary mt-3">Editer</a></p>

    {{ include('episode/_delete_form.html.twig') }}
{% endblock %}
